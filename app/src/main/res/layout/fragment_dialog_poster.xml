<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogPoster">

    <ImageView
        android:id="@+id/imgdialog"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        tools:src="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_nmfilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent_black"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="@string/app_name" />

    <LinearLayout
        android:id="@+id/Linearlayut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ega"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_black"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_ega1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_black"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_ega2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_black"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_ega3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_black"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_ega4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_black"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="@string/app_name" />
    </LinearLayout>

</FrameLayout>